# A list of devices you want to take the screenshots from
devices([
  "iPhone 15 Pro Max",
  "iPhone 15 Pro",
  "iPhone SE (3rd generation)",
  "iPad Pro (12.9-inch) (6th generation)", 
  "iPad Pro (11-inch) (4th generation)"
])

# Languages for screenshots
languages([
  "en-US"
])

# The name of the scheme which contains the UI Tests
scheme("HobbyistSwiftUIUITests")

# Project file path
project("HobbyistSwiftUI.xcodeproj")

# Output directory
output_directory("./fastlane/screenshots")

# Clear all previously generated screenshots before creating new ones
clear_previous_screenshots(true)

# Override the status bar to show full battery and connection
override_status_bar(true)

# Override status bar arguments
override_status_bar_arguments("--time 9:41 --dataNetwork wifi --wifiMode active --wifiName 'Wi-Fi' --cellularMode active --cellularBars 4 --batteryState charged --batteryLevel 100")

# Dark mode screenshots
dark_mode(false)

# Test without building the app first
test_without_building(false)

# Reinstall app before taking screenshots
reinstall_app(true)

# Erase the simulator content and settings before taking screenshots
erase_simulator(true)

# Headless mode (faster but can't see the simulator)
headless(false)

# Concurrent simulators (run multiple simulators at once)
concurrent_simulators(true)

# Maximum number of concurrent simulators
max_concurrent_simulators(4)

# Localize the simulator to the specified locale
localize_simulator(true)

# Number of times to retry screenshots on failure
number_of_retries(2)

# Stop taking screenshots after the first test failure
stop_after_first_error(false)

# Suppress Xcode output
suppress_xcode_output(false)

# For more information about the Snapshotfile, see:
#     https://docs.fastlane.tools/actions/snapshot/#parameters