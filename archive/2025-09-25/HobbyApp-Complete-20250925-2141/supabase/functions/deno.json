{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["_shared/deps.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": [],
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "tasks": {
    "serve": "deno run --allow-net --allow-read --allow-env ./index.ts",
    "test": "deno test --allow-net --allow-read --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint"
  }
}