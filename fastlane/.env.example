# Fastlane Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Apple Developer Account
APPLE_ID="your-apple-id@example.com"
DEVELOPER_TEAM_ID="YOUR_DEVELOPER_TEAM_ID"
APP_STORE_CONNECT_TEAM_ID="YOUR_APP_STORE_CONNECT_TEAM_ID"

# App Store Connect API (Alternative to Apple ID/Password)
# APP_STORE_CONNECT_API_KEY_ID="YOUR_API_KEY_ID"
# APP_STORE_CONNECT_API_ISSUER_ID="YOUR_ISSUER_ID"
# APP_STORE_CONNECT_API_KEY_FILEPATH="./AuthKey_YOUR_KEY_ID.p8"

# Fastlane Apple Application Specific Password
# Generate this at appleid.apple.com under Security > App-Specific Passwords
FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD="your-app-specific-password"

# Match (Code Signing) Configuration
MATCH_PASSWORD="your-match-repository-password"
MATCH_GIT_URL="https://github.com/yourorg/certificates-repo.git"
MATCH_GIT_BASIC_AUTHORIZATION="base64-encoded-username-token"
MATCH_KEYCHAIN_PASSWORD="your-keychain-password"

# Slack Integration (Optional)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Beta Testing
BETA_FEEDBACK_EMAIL="beta-feedback@yourapp.com"

# TestFlight Configuration
PILOT_WAIT_PROCESSING_INTERVAL="30"

# App Metadata
APP_NAME="HobbyistSwiftUI"
APP_BUNDLE_ID="com.hobbyist.bookingapp"
APP_VERSION="1.0.0"

# Build Configuration
GYM_CONFIGURATION="Release"
GYM_EXPORT_METHOD="app-store"
GYM_INCLUDE_BITCODE="false"
GYM_INCLUDE_SYMBOLS="true"

# Test Configuration  
SCAN_SCHEME="HobbyistSwiftUI"
SCAN_CODE_COVERAGE="true"
SCAN_OUTPUT_TYPES="html,junit"

# Screenshot Configuration
SNAPSHOT_SCHEME="HobbyistSwiftUIUITests"
SNAPSHOT_OUTPUT_DIRECTORY="./fastlane/screenshots"

# CI/CD Environment Variables
CI_BUILD_NUMBER="${BUILD_NUMBER:-1}"
CI_COMMIT_SHA="${GITHUB_SHA:-unknown}"
CI_BRANCH="${GITHUB_REF_NAME:-main}"

# Deployment Configuration
DEPLOY_ENVIRONMENT="production"
AUTOMATIC_RELEASE="false"
PHASED_RELEASE="true"
SKIP_WAITING_FOR_BUILD_PROCESSING="true"

# App Store Review Information
REVIEW_CONTACT_EMAIL="review-contact@yourapp.com"
REVIEW_CONTACT_PHONE="+1-555-0123"
REVIEW_DEMO_USER_EMAIL="demo@yourapp.com"
REVIEW_DEMO_USER_PASSWORD="DemoPassword123"

# Legal and Compliance
CONTENT_RIGHTS_HAS_RIGHTS="true"
CONTENT_RIGHTS_CONTAINS_THIRD_PARTY_CONTENT="true"
EXPORT_COMPLIANCE_USES_ENCRYPTION="false"
EXPORT_COMPLIANCE_COMPLIANCE_REQUIRED="false"

# Analytics and Tracking
ADD_ID_INFO_SERVES_ADS="false"
ADD_ID_INFO_TRACKS_ACTION="true"
ADD_ID_INFO_TRACKS_INSTALL="true"
ADD_ID_INFO_USES_IDFA="false"