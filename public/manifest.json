  "shortcuts": [
    {
      "name": "Create Class",
      "short_name": "New Class",
      "description": "Create a new class",
      "url": "/dashboard/classes/new",
      "icons": [
        {
          "src": "/icons/shortcut-class.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Bookings",
      "short_name": "Bookings",
      "description": "View today's bookings",
      "url": "/dashboard/bookings",
      "icons": [
        {
          "src": "/icons/shortcut-booking.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Stats",
      "description": "View analytics dashboard",
      "url": "/dashboard/analytics",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.hobbyist.partner",
      "id": "com.hobbyist.partner"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/hobbyist-partner/id1234567890"
    }
  ],
  "share_target": {
    "action": "/dashboard/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+hobbyist",
      "url": "/dashboard?class=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "browser"
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "file_handlers": [
    {
      "action": "/dashboard/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
      }
    }
  ]
}